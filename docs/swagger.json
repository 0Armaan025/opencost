          "required": true,
          "style": "form",
          "explode": true,
          "schema": {
            "type": "string"
          },
          "examples": {
            "today": {
              "summary": "The current day",
              "value": "today"
            },
            "month": {
              "summary": "The month-to-date",
              "value": "month"
            },
            "lastweek": {
              "summary": "The previous week",
              "value": "lastweek"
            },
            "30m": {
              "summary": "The last 30 minutes",
              "value": "30m"
            },
            "12h": {
              "summary": "The last 12 hours",
              "value": "12h"
            },
            "7d": {
              "summary": "The previous 7 days",
              "value": "7d"
            },
            "range": {
